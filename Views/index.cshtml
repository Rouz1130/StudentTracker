<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Templates</title>
  <link rel="stylesheet" href="https://bootswatch.com/readable/bootstrap.min.css" >
  <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Noto+Sans'  type='text/css'>
  <link rel="stylesheet" href="../Content/css/styles.css" >
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="https://cdn.rawgit.com/vast-engineering/jquery-popup-overlay/1.7.13/jquery.popupoverlay.js"></script>
  <script src="../Content/js/stupidTable.js"></script>
  <script src="Content/js/scripts.js"></script>
</head>
<body>
  <section class="module parallax parallax-1">
    <div class="container">
      <h1 id="brand"></h1>
    </div>
  </section>
  <section class="module content">
    <div class="container section-container">
      <table class="stupid test">
        <thead>
          <th data-sort="string">First Name</th>
          <th data-sort="string">Last Name</th>
          <th data-sort="string">Email</th>
          <th data-sort="string">Start Date</th>
          <th>Delete / Edit</th>
        </thead>
        <tbody>
          @foreach(var student in Model["studentList"] )
          {
            <tr>
              <td >@student.GetFName()</td>
              <td >@student.GetLName()</td>
              <td >@student.GetEmail()</td>
              <td >@student.GetStartDate()</td>
              <td>
                <form action="/delete" method = "post">
                <!-- <input type="hidden" name="_method" value="DELETE"> -->
                <input type="hidden" name="id" value="@student.GetId()">
                <button type="submit" class="glyphicon glyphicon-remove-circle"></button>
              </form>
              </td>
            </tr>
            }
          </tbody>
        </table>
        <h4>Add Student </h4>
        <hr>
        <form class="form-inline">
          <div class="form-group">
            <label class="sr-only" for="exampleInputEmail3">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">
          </div>
        </form>
        <hr>
        <form class="form-inline" action="/add" method="post">
          <div class="form-group">
            <label for="fname">First Name:</label>
            <input type="text" class="form-control" id="fname" name="fname">
          </div>
          <div class="form-group">
            <label for="lname">Last Name:</label>
            <input type="text" class="form-control" id="lname" name="lname">
          </div>
          <div>
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email">
          </div>
          <div>
            <label for="picture">Picture file name:</label>
            <input type="url" class="form-control" id="picture" name="picture">
          </div>
          <div>
            <label for="startDate">Start Date:</label>
            <input type="date" class="form-control" id="startDate" name="startDate">
          </div>
          <button type="submit" class="btn btn-default">Add Student</button>
        </form>
      </div>
    </section>
    <section class="module parallax parallax-1">
      <div class="container">
        <h1 id="brand"></h1>
      </div>
    </section>
    <section class="module content">
      <div class="container section-container">
        <div class="container section-container">
          <table class="stupid">
            <thead>
              <th data-sort="string">First Name</th>
              <th data-sort="string">Last Name</th>
              <th data-sort="string">Email</th>
              <th>Start Date</th>
            </thead>
            <tbody>
              <tr>
                <td>Stephen</td>
