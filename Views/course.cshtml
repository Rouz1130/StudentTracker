<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>This Student</title>
    <link rel="stylesheet" href="https://bootswatch.com/readable/bootstrap.min.css" >
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Noto+Sans'  type='text/css'>
    <link rel="stylesheet" href="../Content/css/styles.css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdn.rawgit.com/vast-engineering/jquery-popup-overlay/1.7.13/jquery.popupoverlay.js"></script>
    <script src="../../Content/js/stupidTable.js"></script>
    <script src="../../Content/js/scripts.js"></script>
  </head>
  <body>
    <section class="module parallax parallax-1">
      <div class="container">
        <h1 id="brand"></h1>
      </div>
    </section>
    <section class="module content">
      <div class="container section-container">
        <h1>@Model["course"].GetName() <button class="slide4_open btn btn-primary">Update</button></h1>
        <div id="slide4">
          <h3 class="text-center">Update @Model["course"].GetName() </h3>
          <form action='/update/@Model["course"].GetId()' method="post">
            <div class="form-group">
              <input type="hidden" name="_method" value="PATCH">
              <input type="hidden" class="form-control" id="sdate" name="sdate" value='@Model["course"].GetStartDate()'>
              <label for="name">Course:</label>
              <input type="text" class="form-control" id="name" name="name" value='@Model["course"].GetName()'>
            </div>
            <div>
              <div class="form-group">
                <label for="name">Status:</label>
                <select name="active" class="form-control">
                  <script type="text/javascript"> document.write( courseActiveSelected( @Model["course"].GetActive() ) );</script>
                </select>
              </div>
            </div>
            <button type="submit" class="btn btn-default jb-button-style center-block">Update This Course</button>
          </form>
        </div>
      <hr>
      <div class="row">
        <div class="col-md-5">
          <h2>Students</h2>
          <table class="stupid">
            <thead>
            </thead>
            <tbody>
              @foreach(var student in Model["studentList"] )
              {
                <tr>
                  <td><a href='/student/@student.GetId()'>@student.GetFName() @student.GetLName()</a></td>
                </tr>
              }
            </tbody>
          </table>
        <!-- Add Student ------------------------------------------------------------------------------->
        <form class="form-inline" action='/student/<1243>Model["student"].GetId()' method="post">
          <input type="hidden" name="_method" value="PATCH">
            <select name="id" class="form-control">
              <1243>foreach(var acourse in Model["allCourses"] )
              {
                <option value="<1243>acourse.GetId()"><1243>acourse.GetName()</option>
              }
            </select>
          <button type="submit" class="btn btn-primary">Add Student</button>
          </form>
      </div>
      <div class="return">
        <h2><a href="/">Back</a></h2>
      </div>
    </section>
    <section class="module parallax parallax-1">
      <div class="container">
        <h1 id="brand"></h1>
      </div>
    </section>
    <section class="module parallax parallax-1">
      <div class="container">
        <h1 id="brand"></h1>
      </div>
    </section>
  </body>
</html>
